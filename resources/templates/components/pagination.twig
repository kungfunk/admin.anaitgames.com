<ul class="pagination">
    {% if pagination.getPrevUrl() %}
        <li class="pagination__page">
            <a href="{{ pagination.getPrevUrl() }}"  class="pagination__link">&laquo; Anterior</a>
        </li>
    {% endif %}

    {% for page in pagination.getPages() %}
        {% if page.num == '...' %}
            <li class="pagination__gap">...</li>
        {% else %}
            <li class="pagination__page {% if page.isCurrent == true %}pagination__page--selected{% endif %}">
                <a href="{{ page.url }}" class="pagination__link">{{ page.num }}</a>
            </li>
        {% endif %}
    {% endfor %}

    {% if pagination.getNextUrl() %}
        <li class="pagination__page">
            <a href="{{ pagination.getNextUrl() }}"  class="pagination__link">Siguiente &raquo;</a>
        </li>
    {% endif %}
</ul>
